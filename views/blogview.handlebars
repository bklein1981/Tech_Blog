<main>
    <div class="navbar custom-brown">
        <div class="navbar-brand">
            <div class="nav-badge px-3 lrg-font">The Tech Blog</div>
        </div>
    </div>
</main>
<section class="container-fluid">
    <div class="row justify-content-center post">
        <div class="row justify-content-center">
            <div class="col-10">
                <div class="brown-border mt-5">
                    <h2 class="custom-brown custom-green strong-text h2-padding sml-font">{{post.title}}</h2>
                    <p class="px-4 py-3 fs-4">{{post.entry}}</p>
                </div>
            </div>
        </div>
    </div>
    {{#each comments as |comment| }}
    <div class="row justify-content-center">
        <div class="row justify-content-center">
            <div class="col-10">
                <div class="brown-border mt-5">
                    <h2 class="custom-brown custom-green strong-text h2-padding sml-font">&nbsp;</h2>
                    <p class="px-4 pt-5 fs-4">{{comment.entry}}</p>
                    <p class="px-4 pb-5 fs-4">&#8212 {{post}}, {{comment.date_created}}</p>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
    <div class="row justify-content-center">
        <div class="row justify-content-center">
            <div class="col-10">
                <div class="brown-border mt-5">
                    <h2 class="custom-brown custom-green strong-text h2-padding sml-font">&nbsp;</h2>
                    <form class="mb-3 px-4">
                        <label for="exampleFormControlTextarea1" class="form-label fs-4">Comment:</label>
                        <textarea class="form-control px-4 blue-border" id="exampleFormControlTextarea1"
                            rows="5"></textarea>
                        <div class="d-grid gap-2 mt-3">
                            <button class="btn btn-secondary btn-lg" id="comment-button">Submit</button>
                        </div>
                </form>
            </div>
        </div>
    </div>
    </div>
</section>